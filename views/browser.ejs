<%- include ('partials/htmlHeader') %>
<%- include ('partials/htmlNavbar') %>	
<div class="d-flex align-items-center min-vh-80 ">
    <div class="container">
		<div class="row h-25 justify-content-center">
			    <center><h1>Wyszukaj prowadzącego</h1></center>
		</div>
		<div class="form-floating mb-3"> 				
			<form action="/rate/browse" method="post">
				<input type="text" class="form-control" placeholder="Imię lub nazwisko" name='name' id="personalData">
				<select name="faculty" id="faculty" class="form-control">
					<%for(let i = 0; i < faculties.length; i++){%>
						<option value="<%=faculties[i]%>"><%=faculties[i]%></option>
					<%}%>
				</select>
				<select onchange="changeVisibility()" name="mode">
					<option value="data">Imie lub nazwisko</option>
					<option value="faculty">Jednostka</option>
				</select>
				<button type="submit" class="btn btn-teach">Szukaj</button>
			</form>
			
		</div>
			<%for(let i =0; i < ratedTeachers.length; i++){%>
			<div class="row justify-content-center searchResult align-items-center">
					<div class="col-md-auto">
						<img src="<%= ratedTeachers[i].img%>" alt="photo" class="img-fluid h-75">
					</div>
					<div class="col align-items-end">
					<h3><p><%= ratedTeachers[i].pref%> <%= ratedTeachers[i].data%> <%= ratedTeachers[i].post%></p>
						<p><%= ratedTeachers[i].position%> <%= ratedTeachers[i].faculty%></p>
						<br>
						<a href="/rate/profile/<%= ratedTeachers[i]._id%>"><button class="btn btn-teach btn-lg">WYŚWIETL</button></a>
					</div>
			</div>
			<%}%>
			<%for(let i =0; i < teachersToVoteOn.length; i++){%>
			<div class="row justify-content-center searchResult align-items-center">
					<div class="col-md-auto">
						<img src="<%= teachersToVoteOn[i].img%>" alt="photo" class="img-fluid h-75">
					</div>
					<div class="col align-items-end">
					<h3><p><%= teachersToVoteOn[i].pref%> <%= teachersToVoteOn[i].data%> <%= teachersToVoteOn[i].post%></p>
						<p><%= teachersToVoteOn[i].position%> <%= teachersToVoteOn[i].faculty%></p>
						<br>
						<a href="/rate/profile/<%= teachersToVoteOn[i]._id%>"><button class="btn btn-teach btn-lg">WYŚWIETL</button></a>
					<%if(currentUser){%>
						<a href="/rate/profile/<%= teachersToVoteOn[i]._id%>/rate"><button class="btn btn-teach btn-lg">OCEŃ</button></a>
					<%}%>
					</div>
			</div>
			<%}%>

		
	</div>
</div>
<%- include ('partials/formDisplay') %>
<%- include ('partials/htmlFooter') %>