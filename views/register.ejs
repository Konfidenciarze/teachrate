<%- include ('partials/htmlHeader') %>
<%- include ('partials/registerNavbar')%>
<script src="scripts/validation.js"></script>
<div class="container">
	<%- include ('partials/success') %>
	<%- include ('partials/error') %>
</div>
<div class="d-flex align-items-center min-vh-80">
	<div class="container">
	  <div class="row justify-content-md-center">
		<div class="col-lg-3">	  
		</div>
		<div class="col-lg-6">
			<span>
				<div class="borderList" style="padding: 40px">	
					<form action="/register" onsubmit="return validateRegister()" method="POST" id="reg-form">					
						<center><span id="informacja"></span></center>

						<div class="form-floating mb-3" aria-describedby="LoginInfo"> 
							<input type="text" name='username' class="form-control rounded-pill" id="login" placeholder="Login"  required>
							<label for="login">Email</label>
									<div id="LoginInfo" class="form-text text-dark">
										Wpisz swoj adres e-mail.
									</div>			
									<span class="validateInfo" id="ValidateLoginInfo" >
									</span>	
						</div>
						
						<div class="form-floating mb-3" aria-describedby="PasswordInfo">
							<input type="password" name='password' class="form-control rounded-pill" id="newPassword1" placeholder="Password" minlength="8" maxlength="32"  required>
							<label for="haslo">Hasło</label>
									<div id="PasswordInfo" class="form-text text-dark">
										Hasło nie może zawierać spacji i musi zawierać od 8 do 32 znaków.
									</div>	
									<span class="validateInfo" id="ValidatePassInfo" >
									</span>									
						</div>

						<div class="form-floating mb-3">
							<input type="password" name='password2' class="form-control text-dark rounded-pill" id="newPassword2" placeholder="Confirm password" minlength="8" maxlength="32" required>
							<label for="haslo2">Zatwierdź Hasło</label>
							<span class="validateInfo" id="ValidatePass2Info" >
							</span>
						</div>
						Główny wydział:<br>
						<select name="prime" id="">
							<option value="">Brak</option>
							<%for(let i = 0; i < faculties.length; i++){%>
								<option value="<%=faculties[i]%>"><%=faculties[i]%></option>
							<%}%>
						</select>
						Poboczny wydział:<br>
						<select name="secondary" id="">
							<option value="">Brak</option>
							<%for(let i = 0; i < faculties.length; i++){%>
								<option value="<%=faculties[i]%>"><%=faculties[i]%></option>
							<%}%>
						</select>
						<input type="checkbox" required>
						Akceptuję warunki <a href="https://www.lipsum.com/" target="_blank"> regulaminu </a>
						<center>
							<button class="btn btn-teach col-6"" type="submit">Zarejestruj się</button>
						</center>
						
					</form>
				</div>	
			</span>
		</div>
		<div class="col-lg-3">
		</div>
	 </div>
	</div>
</div>

<%- include ('partials/htmlFooter') %>
